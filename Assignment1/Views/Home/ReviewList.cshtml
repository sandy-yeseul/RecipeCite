@model IEnumerable<Review>
@{
    Layout = "_Layout";
    ViewBag.Title = "Review List";
}

<div class="panel-body">
    <div class="text-center">
        <h4>Review List!</h4>
        <table class="table table-sm table-striped table-bordered">
            <tr>
                <td>Recipe Name</td>
                <td>User ID</td>
                <td>Nickname</td>
                <td>Review</td>
            </tr>
            @foreach (Review v in Model)
            {
                <tr>
                    <td><a asp-action="ViewRecipe" asp-route-name="@v.RecipeName">@v.RecipeName</a></td>
                    <td>@v.UserId</td>
                    <td>@v.Nickname</td>
                    <td>@v.Content</td>
                </tr>
            }
        </table>

        <a asp-action="AddReview">Write Review</a>
    </div>
</div>