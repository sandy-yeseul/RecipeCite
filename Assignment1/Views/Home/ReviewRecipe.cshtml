@model Review
@{

    Layout = "_Layout";
    ViewBag.Title = "Recipe Review";
}


<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>Write Recipe Reviews!</h4></div>
    <div class="panel-body">
        <form class="p-a-1" asp-action="ReviewRecipe" asp-controller="Home" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="RecipeName">Recipe Name</label>
                <input name="name" />
            </div>
                <div class="form-group">
                    <label asp-for="UserId">User ID: </label>
                    <input asp-for="UserId" />
                </div>
                <div class="form-group">
                    <label asp-for="Nickname">Nickname: </label>
                    <input asp-for="Nickname" />
                </div>
                <div class="form-group">
                    <label asp-for="Content">Review: </label>
                    <input asp-for="Content" />
                </div>
                <button type="submit">Write Review</button>  | <button asp-action="RecipeList">Cancel</button>
         </form>
    </div>
</div>